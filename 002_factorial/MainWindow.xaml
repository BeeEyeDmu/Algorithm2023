<Window x:Class="_002_factorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_002_factorial"
        mc:Ignorable="d"
        Title="Factorial" Height="450" Width="400">
  <Grid>
    <TextBlock 
      HorizontalAlignment="Left" 
      Margin="31,44,0,0" 
      TextWrapping="Wrap" 
      Text="다음 숫자의 팩토리얼을 계산!" 
      VerticalAlignment="Top"/>
    <TextBox x:Name="textBox" 
             HorizontalAlignment="Left" 
             Margin="31,89,0,0" 
             TextWrapping="Wrap" 
             Text="" 
             HorizontalContentAlignment="Center"
             VerticalAlignment="Top" 
             Width="120"/>
    <Button x:Name="button" 
            Content="계산" 
            HorizontalAlignment="Left" 
            Margin="179,88,0,0" 
            VerticalAlignment="Top" 
            Height="19" Width="74"
            Click="button_Click"/>
    <ListBox x:Name="listBox" 
             Height="256" 
             VerticalAlignment="Top" 
             Margin="31,131,0,0" HorizontalAlignment="Left" Width="236"/>

  </Grid>
</Window>
